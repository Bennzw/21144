<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joshy.gnet.MainActivity">

    <ImageButton
        android:id="@+id/imageButton1"
        style="@android:style/Widget.ImageButton"
        android:layout_width="191dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/background_light"
        android:contentDescription="scholarship"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_scholarship_round"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="191dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/imageButton1"
        android:layout_toRightOf="@id/imageButton1"
        android:backgroundTint="@android:color/background_light"
        android:contentDescription="jobs"
        android:onClick="onClick1"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_jobs_round" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="191dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton1"
        android:backgroundTint="@android:color/background_light"
        android:contentDescription="upcomming"
        android:onClick="onClick2"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_upcoming1_round" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="191dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imageButton1"
        android:layout_toEndOf="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:backgroundTint="@android:color/background_light"
        android:contentDescription="cultural"
        android:onClick="onClick3"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_cultural_round"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="180dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="191dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton3"
        android:backgroundTint="@android:color/background_light"
        android:contentDescription="sports"
        android:onClick="onClick4"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_sports_round"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="360dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="191dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imageButton4"
        android:layout_toEndOf="@id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:backgroundTint="@android:color/background_light"
        android:contentDescription="technical"
        android:onClick="onClick5"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_technical_round"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="360dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton3"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:text="SCHOLARSHIP"
        android:visibility="visible"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="JOBS"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton5"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:text="UPCOMING EXAM"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="CULTURAL"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="SPORTS"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="494dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView4"
        android:text="TECH EVENTS"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="494dp" />

    </RelativeLayout>
